@model MVC_ONLINE_SATIS.Models.Sinifler.SatisHereket
@{
    ViewBag.Title = "Satiset";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <br />
    <h2>Satış et</h2>
    <hr />
    @using (Html.BeginForm("Satiset", "Satis", FormMethod.Post))
    {
        @Html.HiddenFor(X=>X.SatisID)
        @Html.DropDownListFor(x => x.MehsulID, (List<SelectListItem>)ViewBag.mehsul, new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(x => x.MusteriID, (List<SelectListItem>)ViewBag.musteri, new { @class = "form-control" })
        <br />
        @Html.DropDownListFor(x => x.IsciID, (List<SelectListItem>)ViewBag.isci, new { @class = "form-control" })
        <br />
        @Html.TextBoxFor(x => x.Eded, new { @class = "form-control", Placeholder = "Say" })
        <br />
        @Html.TextBoxFor(x => x.Qiymet, new { @class = "form-control", Placeholder = "Qiymət" })

        <br />
        @Html.TextBoxFor(x => x.UmumiXerc, new { @class = "form-control", Placeholder = "Ümumi xərc" })
        <br />
        <button class="btn">
<img src="~/ICONS/get_cash_55px.png" /></button>
    }

</div>


