@using MVC_ONLINE_SATIS.Models.Sinifler
@model List<KARQO>
@{
    ViewBag.Title = "MusteriKarqo";
    Layout = "~/Views/Shared/_MusteriMainLayout.cshtml";
}

<h2>MusteriKarqo</h2>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Açıqlama</th>
                <th scope="col">Seria nömrəsi</th>
                <th scope="col">Karqo təslimatçısı</th>
                <th scope="col">Alan şəxs</th>
                <th scope="col">Tarix</th>
                <th scope="col">Detallar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Aciqlama</td>
                    <td>@x.KarqoSERIA</td>
                    <td>@x.KarqoISCILERI.KarqoIsciAD @x.KarqoISCILERI.KarqoIsciSoyad</td>
                    <td>@x.Musteriler.MusteriAd @x.Musteriler.MusteriSoyad</td>
                    <td>@x.Tarix</td>
                    <td>
                        <a href="~/MusteriPANEL/KarqoDetallar/@x.KarqoSERIA" class="btn btn-warning">
                            <img src="~/ICONS/track_order_33px.png" />
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>