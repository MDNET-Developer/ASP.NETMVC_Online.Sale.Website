@using MVC_ONLINE_SATIS.Models.Sinifler;
@model List<Kateqoriya>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<div class="container-fluid">
    <div style="display:flex">
        <h2>Kateqoriya </h2> <a href="/Kateqoriya/YeniKateqoriya/">
    <img src="~/ICONS/add_40px.png" />
</a>
    </div>

    <hr />
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><h4>ID</h4></th>
                <th scope="col"><h4>Kateqoriya</h4></th>
                <th scope="col"><h4>Sil</h4></th>
                <th scope="col"><h4>Yenilə</h4></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <th scope="row">@x.KateqoriyaID</th>
                    <td>@x.KateqoriyaAd</td>
                    <td><a href="/Kateqoriya/KateqoriyaSil/@x.KateqoriyaID"><img src="~/ICONS/Deletel_50px.png" /></a></td>
                    <td><a href="/Kateqoriya/KatiqoriyaYenilePage/@x.KateqoriyaID"><img src="~/ICONS/update_50px.png" /></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

