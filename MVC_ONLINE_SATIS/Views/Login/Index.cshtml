<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">Giriş / qeydiyyat səhifəsi</a>
            </div>
            <div class="social">
                <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                <li><a href="#"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="#"><span class="fa fa-google-plus"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Murad Aliyev</p>
                    <h1>ASP.NET MVC 5</h1>
                    <h2>Online Ticari Veb saytı</h2>
                    <p>
                        Bu proyekt 2022-ci ildə ASP.NET MVC 5 texnelogiyası ilə hazırlanmışdır. Proyekt daxilində
                        Entity Framework(Code first) texnelogiyasından, Linq sorğularından və database
                        olaraq "MS SQL Server 2021"dən istifadə olunmuşdur.
                    </p>
                    @*<div class="content3">
                        <ul>
                            <li><a class="" href="#"> New Project</a></li>
                            <li><a class="read" href="#"> Get Started</a></li>
                        </ul>
                    </div>*@
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">Qeydiyyatdan keç »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Müştəri girişi »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">İşçilərin girişi »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2022 ASP.NET MVC 5  | Backend developer : Murad Aliyev| Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Müştəri girişi</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                      @using (Html.BeginForm("MusteriLogin","Login",FormMethod.Post))
                         {


                        <input type="text" class="name" name="MusteriMail" Placeholder="Mail" required="" />
                        <input type="password" class="password" name="MusteriSifre" Placeholder="Şifrə" required="" />
                        <input type="submit" value="Daxil ol">
                        }
                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifrənizi unutmusuz ?</a></h6>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- //login form popup-->
    <!-- subscribe form popup-->
    <div class="pop-up">
        <div id="small-dialog1" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Giriş</h3>
                    <p>Diqqət bu hissəyə yalnız səlahiyyətli şəxslərin girişi mümükündür!</p>
                    <div class="clear"></div>
                    @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                    {

                        <div class="login-agileits-top">
                            <form action="#" method="post">
                                <input type="text" class="name" name="IstifadeciAd" Placeholder="Mail" required="" />
                                <input type="password" class="password" name="Sifre" Placeholder="Şifrə" required="" />
                                <input type="submit" value="Daxil ol">
                            </form>
                        </div>
                    }
                    </div>
            </div>

        </div>
    </div>
    <!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

      @Html.Action("PartialSignUp", "Login")

        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
	$(document).ready(function() {
	$('.popup-with-zoom-anim').magnificPopup({
		type: 'inline',
		fixedContentPos: false,
		fixedBgPos: true,
		overflowY: 'auto',
		closeBtnInside: true,
		preloader: false,
		midClick: true,
		removalDelay: 300,
		mainClass: 'my-mfp-zoom-in'
	});

	});
    </script>
    <!--//popup-js-->

</body>
