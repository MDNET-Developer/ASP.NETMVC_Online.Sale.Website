@using MVC_ONLINE_SATIS.Models.Sinifler;
@model List<Sobeler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <div style="display:flex">
        <h2>Şöbələr</h2><a href="/Sobeler/YeniSobeler/"><img src="~/ICONS/add_40px.png" /></a>
    </div>
    <hr />
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><h6>ID</h6></th>
                <th scope="col"><h6>Şöbələr</h6></th>
                <th scope="col"><h6>Vəziyyət</h6></th>
                <th scope="col"><h6>Sil</h6></th>
                <th scope="col"><h6>Yenilə</h6></th>
                <th scope="col"><h6>Detallar</h6></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <th scope="row">@x.SobeID</th>
                    <td>@x.SobeAd</td>
                    <td>@x.Veziyyet</td>
                    <td><a href="/Sobeler/SobeSil/@x.SobeID"><img src="~/ICONS/Deletel_50px.png" /></a></td>
                    <td><a href="/Sobeler/SobeGetir/@x.SobeID"><img src="~/ICONS/update_50px.png" /></a></td>
                    <td><a href="/Sobeler/Detallar/@x.SobeID"><img src="~/ICONS/details_50px.png" /></a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

