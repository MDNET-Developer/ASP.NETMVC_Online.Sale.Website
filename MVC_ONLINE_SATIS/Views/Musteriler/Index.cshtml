@using MVC_ONLINE_SATIS.Models.Sinifler;
@model List<Musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <div style="display:flex">
        <h2>Müştərilər</h2><a href="/Musteriler/YeniMusteriler/"><img src="~/ICONS/add_40px.png" /></a>
    </div>
    <hr />
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><h6>ID</h6></th>
                <th scope="col"><h6>Müştəri</h6></th>
                <th scope="col"><h6>Şəhər</h6></th>
                <th scope="col"><h6>Mail</h6></th>
                <th scope="col"><h6>Sil</h6></th>
                <th scope="col"><h6>Yenilə</h6></th>
                <th scope="col"><h6>Detallar</h6></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <th scope="row">@x.MusteriID</th>
                <td>@x.MusteriAd @x.MusteriSoyad</td>
                <td>@x.MusteriSeher</td>
                <td>@x.MusteriMail</td>
                <td><a href="/Musteriler/MusteriSIL/@x.MusteriID"><img src="~/ICONS/Deletel_50px.png" /></a></td>
                <td><a href="/Musteriler/MusteriGetir/@x.MusteriID"><img src="~/ICONS/update_50px.png" /></a></td>
                <td><a href="/Musteriler/Detallar/@x.MusteriID"><img src="~/ICONS/details_50px.png" /></a></td>
            </tr>
            }

        </tbody>
    </table>
</div>

