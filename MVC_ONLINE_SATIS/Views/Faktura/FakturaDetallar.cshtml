@using MVC_ONLINE_SATIS.Models.Sinifler
@model List<FakturaQeyd>
@{
    ViewBag.Title = "FakturaDetallar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <div style="display:flex">
        <h2>Faktura</h2> <a class="btn btn-warning" href="/Faktura/YeniFaktura/">
            <img src="~/ICONS/add_40px.png" /><img src="~/ICONS/invoice_55px.png" />
        </a>
    </div>

    <hr />
    <table style="border-radius:7px" class="table table-dark">
        <thead>
            <tr>
                <th scope="col"><h6>ID</h6></th>
                <th scope="col"><h6>Kontent</h6></th>
                <th scope="col"><h6>Miqdar</h6></th>
                <th scope="col"><h6>Qiymət</h6></th>
                <th scope="col"><h6>Ümumi xərc</h6></th>
             
                @*<th scope="col"><h6>Yenilə</h6></th>
                    <th scope="col"><h6>Detallar</h6></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <th scope="row">@x.FQID</th>

                    <td>@x.Aciqlama</td>
                    <td>@x.Miqdar</td>
                    <td>@x.VahidQiymet ₼</td>
                    <td>@x.UmumiMebleg ₼</td>
                </tr>
            }

        </tbody>
    </table>
</div>

