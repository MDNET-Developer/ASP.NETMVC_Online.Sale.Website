@model MVC_ONLINE_SATIS.Models.Sinifler.Faktura
@{
    ViewBag.Title = "YeniFaktura";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <h2>Yeni faktura</h2>
    <hr />
    @using (Html.BeginForm("YeniFaktura", "Faktura", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.FakturaID)

        @Html.TextBoxFor(x => x.FakturaSeriyaNo, new { @class = "form-control", Placeholder = "Faktura seria" })
        <br />

        @Html.TextBoxFor(x => x.FakturaSiraNo, new { @class = "form-control", Placeholder = "Faktura sıra" })
        <br />

        @Html.TextBoxFor(x => x.Tarix, new { @class = "form-control", Placeholder = "Tarix" })
        <br />
        @Html.TextBoxFor(x => x.Saat, new { @class = "form-control", Placeholder = "Saat" })
        <br />
        @Html.TextBoxFor(x => x.VergiIdaresi, new { @class = "form-control", Placeholder = "Vergi dairəsi" })
        <br />
        @Html.TextBoxFor(x => x.Teslimatci, new { @class = "form-control", Placeholder = "Təslim edən" })
        <br />
        @Html.TextBoxFor(x => x.Alici, new { @class = "form-control", Placeholder = "Təslim alan" })
        <br />
        <button class="btn">
            <img style="transform:scale(0.7)" src="~/ICONS/ok_100px.png" />
        </button>
    }
</div>

